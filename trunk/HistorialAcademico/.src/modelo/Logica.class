Public Function mostrarRelacionesIdAlumno(idalumno As Integer) As Result
  
  Dim mirela As New RelacionDAO
  
  Return mirela.sql("Select idRelacion as IdR,Nombre as Nombre_del_asignatura,Observacion as Observaciones_del_Alumno, asignatura.idasignatura,idAlumno From (Relacion join asignatura On Relacion.Idasignatura = asignatura.Idasignatura) where idalumno =" & Str$(idAlumno) & " order by upper(asignatura.Nombre)")
  
End

Public Function mostrarRelacionesIdasignatura(Idasignatura As Integer) As Result
  
  Dim mirela As New RelacionDAO
  
  Return mirela.sql("Select idRelacion, Relacion.idAlumno, Idasignatura, Alumno.Apellido, Alumno.Nombre, Observacion From (Relacion join Alumno On Relacion.IdAlumno=Alumno.IdAlumno)where idasignatura = " & Str$(idasignatura) & " order by upper(Alumno.Apellido)")
  
End

